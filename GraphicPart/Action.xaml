<Window x:Class="GraphicPart.Action"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Загрузка комментариев" Height="410" Width="550"  MaxHeight="410" MinHeight="410" MaxWidth="550" MinWidth="550" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox_Output"  Grid.Row="0" Height="300" Width="450" Margin="0,20,0,0" TextWrapping="Wrap" TextChanged="TextBox_Output_TextChanged"></TextBox>
        <Button Content="Начать" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10" Click="Button_Click"/>
    </Grid>
</Window>
